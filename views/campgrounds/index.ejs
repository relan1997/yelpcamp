<% layout('layouts/boilerplate.ejs') %>

<div id="map" style="width: 100%; height: 500px"></div>
    <h1>All CampGrounds</h1>
    <% for(let cam of camp) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(cam.images.length) {%>
                    <img  src="<%= cam.images[0].url %>" class="img-fluid">
                    <% } else { %>
                        <img crossorigin="anonymous" src="" class="img-fluid">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= cam.title%></h5>
                        <p class="card-text"><%= cam.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= cam.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= cam._id %>">View <%= cam.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <a href="/campgrounds/new">Create a New Campground</a>
        <script>
            let mapBoxToken= '<%- process.env.MAPBOX_TOKEN %>'
            let c = {features:<%- JSON.stringify(camp) %>}
        </script>
